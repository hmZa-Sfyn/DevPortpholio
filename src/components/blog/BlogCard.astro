---
interface Props {
  title: string;
  excerpt: string;
  date: string;
  slug: string;
}

const { title, excerpt, date, slug } = Astro.props;
---

<article class="bg-gray-800 rounded-lg p-6 hover:transform hover:scale-102 transition-all">
  <h2 class="text-2xl font-bold mb-2">
    <a href={`/blog/${slug}`} class="hover:text-purple-400 transition-colors">
      {title}
    </a>
  </h2>
  <p class="text-gray-400 mb-4">{date}</p>
  <p class="text-gray-300">{excerpt}</p>
  <a href={`/blog/${slug}`} class="inline-block mt-4 text-purple-400 hover:text-purple-300">
    Read more â†’
  </a>
</article>