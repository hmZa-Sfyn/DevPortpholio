---
const links = [
  { href: '/', text: 'Home' },
  { href: 'https://blog.hmza.vercel.app/', text: 'Blog' },
  { href: '/moments', text: 'Moments' },
  { href: '/photos', text: 'PhotoBlog' },
  { href: '/snippets', text: 'CodeSnippets' },
  { href: '/bio', text: 'Bio' },
  { href: '/fun', text: 'Fun' },
  { href: 'https://hmza-sfyn.github.io/', text: 'Personal Portpholio' }
  //{ href: '/admin', text: 'Admin' }
];
---

<header class="bg-gray-800 py-4">
  <nav class="container mx-auto px-4">
    <div class="flex justify-between items-center">
      <div class="text-xl font-bold">
        <a href="/" class="text-gradient">DevPortfolio</a>
      </div>
      <ul class="flex space-x-6">
        {links.map(link => (
          <li>
            <a 
              href={link.href}
              class=" transition-colors top_nav_href"
            >
              {link.text}
            </a>
          </li>
        ))}
      </ul>
    </div>
  </nav>
</header>

<style>
  .text-gradient {
    background-image: linear-gradient(45deg, #00ff00, #00ffff);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    font-size:30px;
  }

  .top_nav_href {
    color:white;
    border-bottom:0px;

    transition-duration: 0.2s;
  }

  .top_nav_href:hover {
    background-image: linear-gradient(45deg, #00ff00, #00ffff);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;

    transition-duration: 0.2s;
  }
</style>