---
import { getCollection } from 'astro:content';
import MainLayout from '../../layouts/MainLayout.astro';
import { format } from 'date-fns';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map(post => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();

const formattedDate = format(new Date(post.data.date), 'MMMM dd, yyyy');
---

<MainLayout title={post.data.title}>
  <article class="max-w-4xl mx-auto prose prose-invert">
    <div class="mb-8">
      <h1 class="text-4xl font-bold mb-4">{post.data.title}</h1>
      <div class="flex items-center text-gray-400 space-x-4">
        <span>{formattedDate}</span>
        <span>â€¢</span>
        <span>{post.data.author}</span>
      </div>
    </div>
    
    <div class="bg-gray-800 p-8 rounded-lg">
      <Content />
    </div>

    {post.data.tags && (
      <div class="mt-8 flex flex-wrap gap-2">
        {post.data.tags.map(tag => (
          <span class="bg-purple-600 px-3 py-1 rounded-full text-sm">
            #{tag}
          </span>
        ))}
      </div>
    )}
  </article>
</MainLayout>

<style is:global>
  .prose {
    max-width: 65ch;
    color: #fff;
  }
  .prose h1, .prose h2, .prose h3 {
    color: #fff;
    margin-top: 2em;
    margin-bottom: 1em;
  }
  .prose code {
    background: #1a1a1a;
    padding: 0.2em 0.4em;
    border-radius: 0.3em;
  }
  .prose pre {
    background: #1a1a1a;
    padding: 1em;
    border-radius: 0.5em;
  }
</style>