---
import MainLayout from '../../layouts/MainLayout.astro';

const asciiArts = [
  {
    title: "Coffee Time",
    art: `
      c[_]
      Coffee break!
    `
  },
  {
    title: "Happy Coder",
    art: `
      d[-_-]b
      Coding with music!
    `
  }
];
---

<MainLayout title="Fun Stuff">
  <div class="max-w-4xl mx-auto">
    <h1 class="text-4xl font-bold mb-8">Fun Zone</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {asciiArts.map(({ title, art }) => (
        <div class="bg-gray-800 p-6 rounded-lg">
          <h2 class="text-xl font-bold mb-4">{title}</h2>
          <pre class="font-mono text-green-400 whitespace-pre">{art}</pre>
        </div>
      ))}
    </div>
  </div>
</MainLayout>